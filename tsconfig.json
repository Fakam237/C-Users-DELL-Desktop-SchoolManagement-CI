{
	"compilerOptions": {
		"target": "es2019",
		"module": "commonjs",
		"lib": ["ES2019"],
		"sourceMap": true,
		"outDir": "out",
		//"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		//"strictNullChecks": true,
		//"strictPropertyInitialization": true,
	},
	"exclude": [
		"node_modules",
		"third_party"
	]
}
